{
    "extends": "@vue/tsconfig",
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "types": ["node"]
    },
    "include": [
        "resources/ts/**/*",
        "resources/ts/**/*.vue"
    ],
    "exclude": ["node_modules"]
}
